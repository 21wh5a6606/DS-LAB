#include<stdio.h>
void bubblesort(int a[],int n)
{
    int i,j,temp;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n-i-1;j++)
        {
            if(a[j]>a[j+1])
            {
                temp = a[j];
                a[j] = a[j+1];
                a[j+1] = temp;
            }
        }
    }
}
int main()
{
    int n,i;
    printf("enter the size\n");
    scanf("%d",&n);
    int a[n];
    printf("\nenter the array elements\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    bubblesort(a,n);
    printf("\nafter sort \n");
    for(i=0;i<n;i++){
        printf("\n%d",a[i]);
    }
    
}

OUTPUT
enter the size
5

enter the array elements
34 54 22 65 32

after sort

22
32
34
54
65
